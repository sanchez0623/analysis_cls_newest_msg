# GitHub Copilot Configuration
# The GitHub token with Copilot access
GITHUB_TOKEN=your_github_token_here

# AI Provider Configuration
# Options: "copilot" (GitHub Copilot) or "qiniu" (Qiniu Cloud)
AI_PROVIDER=copilot

# Qiniu Cloud Configuration (required if AI_PROVIDER=qiniu)
QINIU_ACCESS_KEY=your_qiniu_access_key_here
QINIU_SECRET_KEY=your_qiniu_secret_key_here
QINIU_API_ENDPOINT=https://api.qiniu.com/v1/ai/chat

# Scraper Configuration
# Interval between scraping (in seconds)
SCRAPE_INTERVAL=5

# Number of items to fetch per request
FETCH_COUNT=1

# Request timeout in seconds
REQUEST_TIMEOUT=10

# Maximum retries for failed requests
MAX_RETRIES=3

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
